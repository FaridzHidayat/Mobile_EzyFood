<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".OrderDrink"
    android:background="@drawable/shape_background"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/teks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tambah"
        android:text="Select Your Quantity Item"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="83dp"
        android:textColor="#ffffff"/>
    <ImageView
        android:id="@+id/image_order"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/teks"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        />

    <TextView
        android:id="@+id/tvname_order"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/image_order"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvprice_order"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:layout_below="@+id/tvname_order"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="232dp"
        android:src="@drawable/ic_baseline_add_circle_24"
        android:layout_below="@+id/tvprice_order"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="182dp"
        android:textSize="25dp"
        android:layout_below="@+id/tvprice_order"
        android:textColor="#ffffff"
        />

    <ImageView
        android:id="@+id/minus"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvprice_order"
        android:layout_marginLeft="102dp"
        android:src="@drawable/ic_baseline_remove_circle_24"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/minus"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="10dp"
        android:onClick="ok"
        android:text="OK"
        android:textAlignment="center"
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/addmore"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/add_shopping_cart_24"
        android:onClick="orderlagi"
        />

    <TextView
        android:id="@+id/tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addmore"
        android:layout_marginLeft="6dp"
        android:text="Add More"
        android:textSize="15dp"
        android:textColor="#ffffff"/>
</RelativeLayout>
